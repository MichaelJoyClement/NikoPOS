// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id    String @id @default(uuid())
  name  String
  items Item[]
  sales Sale[]
  users User[]
}

enum Role {
  OWNER
  ADMIN
}

model User {
  id         String   @id @default(uuid())
  username   String   @unique
  password   String
  role       Role     @default(ADMIN)
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Item {
  id          String   @id @default(uuid())
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  kodeItem    String
  barcode     String?
  namaItem    String
  stock       Decimal  @default(0)
  satuan      String   @default("PCS")
  merek       String?
  hargaPokok  Decimal  @default(0)
  hargaJual   Decimal  @default(0)
  mataUang    String   @default("IDR")
  garansi     String?  // pengganti expired date
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  saleItems   SaleItem[]

  @@unique([businessId, kodeItem])
}

model Sale {
  id           String     @id @default(uuid())
  businessId   String
  business     Business   @relation(fields: [businessId], references: [id])
  noTransaksi  String
  tanggal      DateTime   @default(now())
  pelanggan    String?
  subTotal     Decimal    @default(0)
  potongan     Decimal    @default(0)
  pajak        Decimal    @default(0)
  biayaLain    Decimal    @default(0)
  grandTotal   Decimal    @default(0)
  keterangan   String?
  createdAt    DateTime   @default(now())
  items        SaleItem[]

  @@unique([businessId, noTransaksi])
}

model SaleItem {
  id          String  @id @default(uuid())
  saleId      String
  sale        Sale    @relation(fields: [saleId], references: [id])
  itemId      String
  item        Item    @relation(fields: [itemId], references: [id])
  keterangan  String?
  jumlah      Decimal
  satuan      String
  harga       Decimal
  potPersen   Decimal @default(0)
  total       Decimal
}
